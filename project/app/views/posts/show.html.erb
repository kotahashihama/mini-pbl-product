<%#
  スレッド詳細画面（兼投稿一覧画面）の構造
  URL パス: /posts/:post_id
%>

<main class="posts-show">
  <h1>スレッドタイトル</h1>

  <%# 投稿 %>
  <div class="posts">
    <% 5.times do %>
      <div class="post">
        <div class="meta">
          <span class="number">
            投稿ID
          </span>

          <span class="name">
            名前
          </span>

          <span class="date">
            投稿日時
          </span>

          <span class="user-id">
            UID
          </span>
        </div>

        <div class="post-content">
          <span class="escaped">内容</p>
        </div>
      </div>
    <% end %>
  </div>

  <%= link_to '掲示板に戻る', '/posts' %>

  <%# 投稿フォーム %>
  <div class="form-box">
    <div class="form-header">レスを投稿する</div>

    <form class="form" action="/posts/1" method="post">
      <textarea class="multi-line-post-field" placeholder="コメント内容" rows="5" cols="70" wrap="off" name="content"></textarea>

      <button class="submit-button" type="submit" name="submit">書き込む</button>
    </form>
  </div>
</main>
